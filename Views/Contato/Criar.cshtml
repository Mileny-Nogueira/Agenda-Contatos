@model ProjetoMVC.Models.Contato

@{
    ViewData["Title"] = "Editar contato";
}

<h1 class="mt-5">Criar Novo Contato</h1>

<hr class="mb-4" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group mb-3 w-75">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"  maxlength="30" placeholder="Digite o nome" required />
            </div>
            <div class="form-group mb-3 w-75">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" placeholder="Digite o telefone" maxlength="11" onkeyup="mascaraCelular(this)" oninput="validarSomenteNumeros(this)" required />
            </div>
            <div class="form-group mb-4">
                <label asp-for="Ativo" class="control-label"></label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input" />
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-secondary w-25" />
            </div>
        </form>
    </div>
</div>
</hr>
<br>

<script src="~/js/validarForm.js"></script>