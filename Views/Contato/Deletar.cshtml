<link rel="stylesheet" href="~/css/Deletar.css" /> 

@model ProjetoMVC.Models.Contato

@{
    ViewData["Title"] = "Deletar Contato";
}

<div class="alert alert-danger d-flex align-items-center my-5" role="alert">
    <img class="mx-3" src="~/danger_icon.png">
    <div>
        <strong>Atenção:</strong> você deseja realmente deletar esse contato? Essa operação é irreversível!
    </div>
</div>

<h1 class="mt-5">Deletar</h1>
<hr class="mb-4" />

<div class="mb-5">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Nome)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Nome)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Telefone)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Telefone)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Ativo)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Ativo)
        </dt>
    </dl>
</div>

<form asp-action="Deletar">
    <input type="submit" value="Deletar" class="btn btn-danger mb-3">
</form>

<hr />
<div>
    <a asp-action="Index">Voltar</a>
</div>
