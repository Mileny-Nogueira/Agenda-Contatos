@model ProjetoMVC.Models.Contato

@{
    ViewData["Title"] = "Deletar Contato";
}

<div class="alert alert-danger d-flex align-items-center my-5" role="alert">
    <img class="mx-3" src="~/danger_icon.png">
    <div>
        <strong>Atenção:</strong> você deseja realmente deletar esse contato? Essa operação é irreversível!
    </div>
</div>

<h1>Deletar informando Id</h1>
<hr class="mb-4" />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Contato" asp-action="Deletar_Id" method="post">
            <div class="form-group mb-4 w-50">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" type="number" min="1" class="form-control" placeholder="Digite o identificador" required/>
            </div>
            <div class="form-group">
                <input type="submit" value="Deletar" class="btn btn-danger w-25" />
            </div>
        </form>
    </div>
</div>
</hr>
<br>