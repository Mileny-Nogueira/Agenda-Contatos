
@model ProjetoMVC.Models.Contato

@{
    ViewData["Title"] = "Detalhes do contato";
}

<h1 class="mt-5">Buscar Detalhes</h1>
<hr class="mb-4" />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Contato" asp-action="Detalhes" method="get">
            <div class="form-group mb-3 w-75">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control mb-4" maxlength="3" placeholder="Digite o identificador" required />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-secondary w-25">Buscar</button>
            </div>
        </form>
    </div>
</div>