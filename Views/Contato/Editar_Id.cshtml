@model ProjetoMVC.Models.Contato

@{
    ViewData["Title"] = "Editar Contato";
}

<h1 class="mt-5">Editar Contato</h1>
<hr class="mb-4" />

<div class="row mt-4">
    <div class="col-md-4">
        <form asp-controller="Contato" asp-action="Editar_Id" method="post">
            <div class="form-group mb-3">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" placeholder="Digite o identificador" maxlength="3" required/>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome" maxlength="50" required />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" id="telefone" class="form-control" placeholder="Digite o telefone" maxlength="11" onkeyup="mascaraCelular(this)" oninput="validarSomenteNumeros(this)" required />
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-secondary w-25 mb-4" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Voltar</a>
</div>

<script src="~/js/validarForm.js"></script>
